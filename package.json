{
  "name": "edlab-node-skeleton",
  "version": "1.0.3",
  "description": "EdLab Node.js Project Skeleton",
  "main": "index.js",
  "repository": "https://github.com/EdLab/node-skeleton",
  "scripts": {
    "bump": "gulp bump",
    "bump:minor": "gulp bump-minor",
    "bump:major": "gulp bump-major",
    "build": "npx babel server/ --copy-files -d dist",
    "dev": "pm2 start ecosystem.config.js --only app-dev --no-daemon",
    "debug": "node --inspect --trace-warnings --trace-deprecation server",
    "test": "NODE_ENV=test mocha \"test/**/*.test.js\" --require babel-polyfill --require @babel/register --exit",
    "test:report": "NODE_ENV=test mocha \"test/**/*.test.js\" --require babel-polyfill --require @babel/register --reporter mochawesome --reporter-options reportDir=test/report,autoOpen  --exit",
    "test:coverage": "NODE_ENV=test nyc mocha \"test/**/*.test.js\" --require babel-polyfill --require @babel/register --exit && nyc report --reporter=html && open coverage/index.html",
    "start:docker": "pm2-docker start ecosystem.config.js --only app-prod"
  },
  "author": "EdLab Dev Team <edlabit@tc.columbia.edu>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.14.0",
    "gulp": "^4.0.0",
    "gulp-bump": "^3.1.3",
    "mocha": "^5.2.0",
    "mochawesome": "^3.1.1",
    "node-notifier": "^5.4.0",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-member-expression-literals": "^7.2.0",
    "@babel/plugin-transform-property-literals": "^7.2.0",
    "@babel/plugin-transform-react-display-name": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "body-parser": "^1.18.3",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-get-param": "^1.1.2",
    "express-session": "^1.15.6",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pm2": "^3.3.0",
    "winston": "^3.2.1"
  }
}
