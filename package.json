{
  "name": "edlab-node-skeleton",
  "version": "1.0.3",
  "description": "EdLab Node.js Project Skeleton",
  "main": "index.js",
  "repository": "https://github.com/EdLab/node-skeleton",
  "scripts": {
    "build": "babel server/ --copy-files -d dist",
    "dev": "pm2 start ecosystem.config.js --only app-dev --no-daemon",
    "debug": "node --inspect --trace-warnings --trace-deprecation server",
    "test": "NODE_ENV=test mocha \"test/**/*.test.js\" --require babel-polyfill --require @babel/register --exit",
    "test:report": "NODE_ENV=test mocha \"test/**/*.test.js\" --require babel-polyfill --require @babel/register --reporter mochawesome --reporter-options reportDir=test/report,autoOpen  --exit",
    "test:coverage": "NODE_ENV=test nyc mocha \"test/**/*.test.js\" --require babel-polyfill --require @babel/register --exit && nyc report --reporter=html && open coverage/index.html",
    "start:docker": "pm2-docker start ecosystem.config.js --only app-prod",
    "start": "pm2-runtime start ecosystem.config.js --only app-prod"
  },
  "engines": {
    "node": "12.x"
  },
  "author": "EdLab <edlabit@tc.columbia.edu>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-merge-sibling-variables": "^6.9.4",
    "babel-plugin-transform-minify-booleans": "^6.9.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-plugin-transform-remove-debugger": "^6.9.4",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "mocha": "^10.2.0",
    "mochawesome": "^4.1.0",
    "node-notifier": "^6.0.0",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-member-expression-literals": "^7.2.0",
    "@babel/plugin-transform-property-literals": "^7.2.0",
    "@babel/plugin-transform-react-display-name": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "body-parser": "^1.19.0",
    "debug": "^4.1.1",
    "dotenv-safe": "^8.1.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-get-param": "^1.1.2",
    "express-session": "^1.16.2",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pm2": "^3.5.1",
    "winston": "^3.2.1"
  }
}
